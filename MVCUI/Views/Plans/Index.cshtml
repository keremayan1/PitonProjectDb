@{
    ViewData["Title"] = "Index";
}
@model List<PlanView>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Planlar</h5>

                <a asp-controller="Plans" asp-action="AddPlan" class="btn btn-primary mb-3">Plan oluştur</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Takvim</th>
                                <th>Planlar</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                   
                                   <td>@item.Time @item.PlanStatusName</td>
                                   <td>@item.Comment</td>
                                    <td>
                                        <a asp-controller="Plans" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                                        <a asp-controller="Plans" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Kayıtlı Plan bulunamadı
                    </div>
                }
            </div>
        </div>
    </div>
</div>
